
#######################
# update.cfg example
#######################

* recovery & recovery_backup section은 압축을 하지 않음.(compressed flag 무시)
* recovery_backup을 강제 업그레이드 하기 위해서는 info section 과 recovery section 각각 forced=true가
  설정되어 있어야 dloader에서 강제 업그레이드 함.


[info]
filename=out/target/product/bcm_platform/update.bin
product=ST950I-LN
version=vendor/tvstorm/prebuilts/boot/version/version.txt
force=true/false        # 전체 섹션을 강제 업그레이드 하도록 설정하기 위한 틀래그
desc=update.bin
emmc_resize=true         # gpt resizing이 필요한 경우 true로 설정
spi_resize=true         # spi flash resizing이 필요한 경우 true로 설정
integrity=sha256        # info section에 integrity 방식을 지정하면 개별 섹션 integrity섹션
                        # 보다 우선함. [1] 섹션에 integrity를 설정해도 무시되고 [info] 섹션
                        # 설정으로 설정됨.
pk=
pem=
x509=

[boot]                     # section number 앞에 '*' 또는 '#'이 붙으면 disabled section임, 이미지에 포함되지 않음.
filename=out/target/product/bcm_platform/boot_dummy_signed.bin
compressed=false
force=true/false                # 섹션을 강제 업그레이드 하도록 설정하기 위한 틀래그
integrity=sha256                # default: crc32
flash_part_type=emmc            # spi or emmc
flash_part_name=boot            # emmc 인 경우는 by-name, spi flash인 경우는 mtd name,
                                # emmc gpt resize인 경우 꼭, gpt & gpt_backup partition name을 지정 해줘야 함!
flash_part_offset=0x1A00000     # offset base address, gpt(emmc)/spi flash resizing시만 사용
version=0x00010203              # v1.2.3

[system]             
filename=out/target/product/bcm_platform/system.raw.img.zip
compressed=true
flash_part_type=emmc
flash_part_name=system
version=/home/sunny/project/02Linknet/version.txt

[nbls3]             
filename=out/target/product/bcm_platform/nbls3_v0.1.2.bin
compressed=true
flash_part_type=spi
flash_part_name=nbls3
version=

